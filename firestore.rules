rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getOrgId() {
      return request.auth.token.orgId != null 
        ? request.auth.token.orgId 
        : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.orgId;
    }
    
    function getRole() {
      return request.auth.token.role != null 
        ? request.auth.token.role 
        : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isOwnerOrAdmin() {
      return isSignedIn() && (getRole() == 'owner' || getRole() == 'admin');
    }

    function isCreator(data) {
      return isSignedIn() && data.createdBy == request.auth.uid;
    }
    
    function hasOrgAccess(data) {
      return isSignedIn() && (
        isOwnerOrAdmin() || 
        data.orgId == getOrgId() || 
        isCreator(data)
      );
    }

    // Match orgs (root collection)
    match /orgs/{orgId} {
      allow read: if isSignedIn() && (isOwnerOrAdmin() || orgId == getOrgId() || isCreator(resource.data));
      allow write: if isOwnerOrAdmin() || (isSignedIn() && (resource == null || isCreator(resource.data)));
      allow create: if isSignedIn();
    }

    // Match users (root collection)
    match /users/{userId} {
      // ORDER MATTERS: Put userId check FIRST to avoid recursion in isOwnerOrAdmin()
      allow read: if isSignedIn() && (userId == request.auth.uid || isOwnerOrAdmin() || resource.data.orgId == getOrgId() || isCreator(resource.data));
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (userId == request.auth.uid || isOwnerOrAdmin() || isCreator(resource.data));
      allow delete: if false;
    }
    
    // Match profiles
    match /profiles/{profileId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if hasOrgAccess(resource.data) || isCreator(request.resource.data) || (isOwnerOrAdmin() || (request.resource != null && request.resource.data.orgId == getOrgId()));
    }
    
    // Match assessments
    match /assessments/{assessmentId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if hasOrgAccess(resource.data) || isCreator(request.resource.data) || (isOwnerOrAdmin() || (request.resource != null && request.resource.data.orgId == getOrgId()));
    }
    
    // Match reports
    match /reports/{reportId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if hasOrgAccess(resource.data) || isCreator(request.resource.data) || (isOwnerOrAdmin() || (request.resource != null && request.resource.data.orgId == getOrgId()));
    }
    
    // Match invites (root collection)
    match /invites/{inviteId} {
      allow read: if isSignedIn() && (isOwnerOrAdmin() || resource.data.orgId == getOrgId() || request.auth.token.email == resource.data.email || isCreator(resource.data));
      allow write: if isOwnerOrAdmin() || isCreator(request.resource.data);
    }

    // Match categories
    match /categories/{categoryId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if isOwnerOrAdmin() || isCreator(request.resource.data);
    }
    
    // Match groups
    match /groups/{groupId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if isOwnerOrAdmin() || isCreator(request.resource.data);
    }

    // Match programs
    match /programs/{programId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if isOwnerOrAdmin() || isCreator(request.resource.data);
    }

    // Match programAssignments
    match /programAssignments/{assignmentId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if hasOrgAccess(resource.data) || isCreator(request.resource.data);
    }

    match /dashboard_groupStats/{groupId} {
      allow read: if hasOrgAccess(resource.data);
      allow write: if false; // Only via Cloud Functions
    }

    match /auditLogs/{logId} {
      allow read: if isOwnerOrAdmin();
      allow write: if false; // Only via Cloud Functions
    }
  }
}
