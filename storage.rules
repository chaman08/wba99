rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getOrgId() {
      return request.auth.token.orgId;
    }
    
    function belongsToOrg(orgId) {
      return isSignedIn() && getOrgId() == orgId;
    }

    // Match org-scoped files
    match /orgs/{orgId}/{allPaths=**} {
      allow read, write: if belongsToOrg(orgId);
    }

    // Publicly accessible shared files (e.g. branding assets if any)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.token.role == 'admin'; // Only global admins
    }
  }
}
